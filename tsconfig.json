{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@_services/*": ["src/services/*"],
      "@_controllers/*": ["src/controllers/*"],
      "@_models/*": ["src/models/*"],
      "@_types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
